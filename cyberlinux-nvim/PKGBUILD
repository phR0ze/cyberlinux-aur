pkgname=cyberlinux-nvim
pkgver=0.0.2
pkgrel=1
pkgdesc="Installs and configures neovim, vim-plug and default plugins for cyberlinux"
arch=('any')
url="https://github.com/phR0ze/cyberlinux-aur/tree/master/cyberlinux-nvim"
license=('MIT')
makedepends=('git' 'curl')
depends=('neovim')
source=("init.vim")
sha256sums=('31656f50dc30738b9cf1b9a260f062ffcbc299195b8bfa4cf9d77d4719205f79')

plugins=(
  'scrooloose/nerdtree'                  # File explorer sidebar
  'vim-airline/vim-airline'              # Awesome status bar at bottom with git support
  'vim-airline/vim-airline-themes'       # Vim Airline themes
  'ryanoasis/vim-devicons'               # Sweet folder/file icons for nerd tree

  # ColorSchemes
  'ajmwagar/vim-deus'                    # deus
  'vim-scripts/CycleColor'               # Color scheme cycler
  'YorickPeterse/happy_hacking.vim'      # happy_hacking
  'w0ng/vim-hybrid'                      # hybrid
  'kristijanhusak/vim-hybrid-material'   # hybrid_material
  'nanotech/jellybeans.vim'              # jellybeans
  'dikiaap/minimalist'                   # minimalist
  'marcopaganini/termschool-vim-theme'   # termschool

  # Syntax highlighting
  'stephpy/vim-yaml'                     # yaml
  'hail2u/vim-css3-syntax'               # css3
  'kurayama/systemd-vim-syntax'          # systemd
)

# $(pwd) is $srcdir
package()
{
  msg "Installing neovim default config..."
  install -Dm 644 "$srcdir"/init.vim -t "$pkgdir"/etc/skel/.config/nvim
  install -dm 755 "$pkgdir"/usr/bin
  ln -s /usr/bin/nvim "$pkgdir"/usr/bin/vim

  msg "Installing vim-plug plugin manager..."

  msg2 "Creating plugin directory structure..."
  install -dm 755 "$pkgdir"/etc/skel/.config/nvim/{autoload,plugins}

  msg2 "Downloading vim-plug plugin manager..."
  curl -fLo "$pkgdir"/etc/skel/.config/nvim/autoload/plug.vim https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

  msg "Installing plugins..."
  pushd "$pkgdir"/etc/skel/.config/nvim/plugins
  for repo in ${plugins[@]}; do
    msg2 "Installing plugin $repo"
    plugin=$(basename $repo)
    if [ ! -d $plugin ]; then
      git clone "https://github.com/${repo}"
      rm -rf $plugin/.git
    fi
  done
  popd
}

# vim: ts=2:sw=2:sts=2

pkgname=packer
pkgver=1.2.4
pkgrel=1
pkgdesc="Build Automated Machine Images"
url="http://www.packer.io"
arch=('x86_64')
license=('MPL2')
depends=('glibc')
source=("${pkgname}-${pkgver}.zip::https://releases.hashicorp.com/packer/${pkgver}/packer_${pkgver}_linux_amd64.zip")
sha256sums=('258d1baa23498932baede9b40f2eca4ac363b86b32487b36f48f5102630e9fbb')

package()
{
  install -dm755 "${pkgdir}/usr/bin"
  install -Dm755 "${srcdir}/${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}

pkgname=rustfmt-sideload
pkgver=1.4.38
pkgrel=1
pkgdesc="Format Rust code with latest"
url="https://github.com/rust-lang/rustfmt"
arch=('x86_64')
license=(MIT APACHE)
install=rustfmt.install
source=("https://github.com/rust-lang/rustfmt/releases/download/v${pkgver}/rustfmt_linux-x86_64_v${pkgver}.tar.gz")
sha256sums=('5c10e4701ee910d0ec7cde12350c124418a6c1c4a60c50702b720b4587882edf')

package()
{
  # Create install directory structure
  install -dm 755 "${pkgdir}/usr/bin"

  # Install package files
  cd "${srcdir}/rustfmt_linux-x86_64_v${pkgver}"
  install -Dm 755 "cargo-fmt" "${pkgdir}/usr/bin/cargo-fmt.new"
  install -Dm 755 "rustfmt" "${pkgdir}/usr/bin/rustfmt.new"
}

# vim: ts=2:sw=2:sts=2

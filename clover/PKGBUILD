pkgname=clover
pkgver=5138
pkgrel=1
pkgdesc='Bootloader for OSX, Windows and Linux in UEFI and in legacy mode'
arch=('x86_64')
url='https://github.com/CloverHackyColor/CloverBootloader'
license=('BSD')
source=("https://github.com/CloverHackyColor/CloverBootloader/releases/download/$pkgver/Clover-$pkgver-X64.iso.7z")
noextract=("Clover-$pkgver-X64.iso.7z")
sha256sums=('9cd341f318bb9dd3f74e47ef4023342875dda66ae46fada6dd17f2d8bf57752d')

prepare()
{
  rm -rf EFI
  bsdtar -xf "Clover-$pkgver-X64.iso.7z" -O | bsdtar -xf - 'EFI'
}

package()
{
  # Install the documentation
  install -dm 755 "$pkgdir/usr/share/doc"
  mv -f "EFI/CLOVER/doc" "$pkgdir/usr/share/doc/$pkgname"

  # Install the fallback boot file
  install -D "EFI/BOOT/BOOTX64.efi" "$pkgdir/usr/lib/$pkgname/EFI/BOOT/BOOTX64.efi"

  # Install the clover boot files
  cp --archive 'EFI/CLOVER' "$pkgdir/usr/lib/$pkgname/EFI"
}

# vim: ts=2:sw=2:sts=2

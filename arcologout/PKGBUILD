pkgname=arcologout
pkgver=1.0.2
pkgrel=1
pkgdesc="Simple clean ArcoLinux logout screen"
url="https://github.com/phR0ze/arcologout"
arch=('x86_64')
depends=('python3' 'python-cairo' 'python-gobject')
license=('GPL3')
source=("${pkgname-$pkgver}.tar.gz::https://github.com/phR0ze/${pkgname}/archive/refs/tags/v${pkgver}.tar.gz")
sha256sums=('1dc9955f428661a2034a5330d1e474c9ad0973807231aaca87b5053f9821cd28')

package()
{
  # Create install directory structure
  install -dm 755 "$pkgdir"/{etc,usr/bin,usr/share/"${pkgname}/themes"}

  # Install package files
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -Dm 644 LICENSE "${pkgdir}/usr/share/${pkgname}"
  install -Dm 644 README.md "${pkgdir}/usr/share/${pkgname}"
  install -Dm 644 "config/arcologout.conf" "${pkgdir}/etc"
  install -Dm 755 "config/arcologout" "${pkgdir}/usr/bin"
  install -Dm 644 "GUI.py" "${pkgdir}/usr/share/${pkgname}"
  install -Dm 644 "arcologout.py" "${pkgdir}/usr/share/${pkgname}"
  cd "themes"
  find . -type d -exec install -dm 755 "{}" "${pkgdir}/usr/share/${pkgname}/themes/{}" \;
  find . -type f -exec install -Dm 644 "{}" "${pkgdir}/usr/share/${pkgname}/themes/{}" \;
}

